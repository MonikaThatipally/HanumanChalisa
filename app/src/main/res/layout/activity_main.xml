<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thatipally.monikathatipally.hanumanchalisa.MainActivity"
    android:background="@drawable/jaimain"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Telugu"
        android:layout_marginLeft="25dp"
        android:background="@drawable/abc_scrubber_control_to_pressed_mtrl_005"
        android:textColor="#fffdfd"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/title"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hindi"
        android:id="@+id/button2"
        android:background="@drawable/abc_scrubber_control_to_pressed_mtrl_005"
        android:layout_marginRight="25dp"
        android:textColor="#fcf9f9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hanuman \n Chalisa"
        android:textSize="40dp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />
</RelativeLayout>
